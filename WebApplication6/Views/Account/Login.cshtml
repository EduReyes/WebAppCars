@model Login

<style>
    img {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
    input[type=text], select {
        width: 50%;
        padding: 0px 0px;
        margin: 0 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 0px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    div {
        border-radius: 5px;
        padding: 15px;
    }

    form {
        width: 30%;
        height: 20%;
        margin-left: auto;
        margin-right: auto;
        position: relative;
        border: 2px solid black;
        box-shadow: 5px 3px 5px black;
    }
</style>

<!DOCTYPE html>
<html>
<body>
    <img src="/logo.png" alt="Ultebra" style="width:30%;">
    
    <div class="text-danger text-left" asp-validation-summary="All"></div>
    <h1 style="text-align:center">Login</h1>
    <form asp-action="Login" method="post" ; style="text-align:center">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group text-left">
            <b><label asp-for="Email"></label></b><br />
                    <input asp-for="Email" class="form-control" />
</div>
        <div class="form-group text-left">
            <b><label asp-for="Password"></label></b> <br />
                <input asp-for="Password" class="form-control" />
</div>
        <button class="btn btn-primary" type="submit">Log In</button>
        <br /><br />

    </form>

</body>
</html>
