@model Car

<style>

    input[type=text], select {
        width: 50%;
        padding: 0px 0px;
        margin: 0 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 0px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    div {
        border-radius: 5px;
        padding: 15px;
    }

    form {
        width: 50%;
        height: 20%;
        margin-left: auto;
        margin-right: auto;
        position: relative;
        border: 2px solid black;
        box-shadow: 5px 3px 5px black;
    }
</style>

<!DOCTYPE html>
<html>


<body>
    <h1 style="text-align:center"> Update car</h1>

    <form method="post" ; style="text-align:center">

        <div class="text-left">
            <b>Brand</b>
            @Html.DropDownListFor(m => m.Brand, (IEnumerable<SelectListItem>)ViewBag.BrandID, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Brand, null, new { @class = "text-danger" })
        </div>
        <div class="text-left">
            <b>Model</b><br />
            <input asp-for="Model" class="form-control" />
            @Html.ValidationMessageFor(m => m.Model, null, new { @class = "text-danger" })
        </div>

        <div class="text-left">
            <b><label asp-for="Price"></label></b>
            <input asp-for="Price" class="form-control" />
            @Html.ValidationMessageFor(m => m.Price, null, new { @class = "text-danger" })
        </div>

        @if (@User.IsInRole("Admin"))
        {
            <div class="text-left">
                <b><label asp-for="Company"></label></b>
                <br />
                <input asp-for="Company" class="form-control" />
            </div>
        }

        <div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>


    </form>

    <br /><br />
</body>
</html>